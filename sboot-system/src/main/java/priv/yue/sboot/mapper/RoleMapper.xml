<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="priv.yue.sboot.mapper.RoleMapper">
    <sql id="tableName">
        sys_role
    </sql>

    <sql id="baseColumn">
        role_id,name,level,description,data_scope,create_by,update_by,create_time,update_time
    </sql>

    <resultMap id="roleWithMenu" type="priv.yue.sboot.domain.Role">
        <id property="roleId" column="role_id" />
        <collection property="menus" ofType="priv.yue.sboot.domain.Menu"
                    select="priv.yue.sboot.mapper.MenuMapper.getRoleMenu"
                    column="role_id" />
    </resultMap>

    <select id="getUserRoles" resultMap="roleWithMenu">
        select a.* from sys_role a, sys_user_role b where a.role_id = b.role_id and b.user_id = #{userId}
    </select>

    <select id="getUserRolesNoMenus" resultType="priv.yue.sboot.domain.Role">
        select a.* from sys_role a, sys_user_role b where a.role_id = b.role_id and b.user_id = #{userId}
    </select>

</mapper>